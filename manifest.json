{
    "manifest_version": 3,
    "name": "Anki Card Creator",
    "version": "1.0.0",
    "description": "Webページの範囲を選択してAnkiカードを素早く作成",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:8765/*",
        "https://generativelanguage.googleapis.com/*",
        "https://api.openai.com/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background/background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}