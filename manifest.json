{
    "manifest_version": 3,
    "name": "Anki Card Creator",
    "version": "1.1.0",
    "description": "Webページの範囲を選択してAnkiカードを素早く作成",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>",
        "http://localhost:8765/*",
        "https://generativelanguage.googleapis.com/*",
        "https://api.openai.com/*",
        "https://api.anthropic.com/*",
        "https://openrouter.ai/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}